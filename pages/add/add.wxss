/* pages/upload/upload.wxss */

.toast {
  position: fixed;
  transform: translate(-50%, -50%);
  padding: 15px;
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  border-radius: 5px;
  opacity: 1; /* 初始透明度为1 */
  transition: opacity 1s ease-in-out;
}

.toast:hover{
  opacity: 0;
}