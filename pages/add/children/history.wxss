/* pages/add/children/history.wxss */

/*Back*/
.back{
  position: absolute;
  display: block;
  z-index: -1;
}

/*because the design annouced the element (defaul by WeUI)--this is air to cover the gap*/
.air1{
  display: flex;
  width: 100px;
  height: 44px;
  padding: 6px 6px 6px 7px;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

/*This is the first element*/
.containerinput1{
  width: 100vw;
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  justify-content: space-between;
}

.containerinput1child1{
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  justify-content: space-between;
}
.imgcontainer1{
  margin-left: 27px;
  display: flex;
  width: 12px;
  height: 24px;
  padding: 3.5px 2px 3.5px 1.002px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;  
}
.back-icon {
  width: 8.998px;
  height: 17px;
  flex-shrink: 0;
}

.back-text {
  color: #000;
  text-align: center;
  margin: 10px;
  font-family: PingFang SC;
  font-size: 24px;
  font-style: normal;
  font-weight: 600;
  line-height: 87.5%; /*  */
  letter-spacing: -0.32px;
  flex-direction: row;
}

/*Etc icon*/
.imgcontainer2{
  border-radius: 20%;
  margin-right: 17px;
  display: flex;
  width: 24px;
  height: 24px;
  padding: 0px 3.25px;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  /*background-color: transparent;*/
  /*background-color: #FFF;*/
  opacity: 0;
}
.etc-icon{
  width: 17.5px;
  height: 3.5px;
  flex-shrink: 0;
}


.history-container {
  padding: 20px;
}

.card {
  height: 80px;
  display: grid;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-bottom: 10px;
  padding: 10px;
}

.commit-left{
  height: 40px;
}

.commit-right{
  margin-left: auto;
  height: 40px;
}
.commit-small {
  display: grid;
  font-size: 14px;
  color: #888;
}

.commit-content {
  font-size: 16px;
  margin-top: auto;
  color: #333;
}

.commit-detail{
  font-size: 14px;
  color: #888;
  overflow: hidden;/*超出文本隐藏*/
  white-space: nowrap;/*不换行只显示一行*/
  text-overflow:ellipsis; /*超出部分省略号显示 */
}

/* 小卡片点击样式 */
.modal{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明黑色背景 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-image{
  width: 100px;
  height: 100px;
  margin-bottom: 20px;
}

.modal-content {
  display: flex;
  flex-direction: column;
  background: #FFF;
  width: 200px;
  height: 400px;
  padding: 20px;
  border-radius: 5px;
}

.modal-contentsmall{
  display: flex;
  flex-direction: column;
  margin-bottom: auto;
}

.modal-adddetailScollview{
  height: 200px;
}

.modal-adddetailScollview{
  color: #000;
  font-family: PingFang SC;
  font-size: 16px;
  font-style: normal;
  font-weight: 400;
  line-height: 131.25%;
}

.LongText{
  color: #000;
  text-align: center;
  font-family: PingFang SC;
  font-size: 16px;
  font-style: normal;
  font-weight: 400;
  line-height: 131.25%;
  letter-spacing: -0.32px;
}

.bordercontainer{
  padding: 10px;
  background: linear-gradient(180deg, #F4FADD 0%, #ECF4DC 28.26%);
  border-radius: 4%;
}


.BlankContainer{
  height: 800px;
  width: 300px;
  background-color: #fff;
}