/* progress.wxss */
.base-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.header {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.input-container {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

input {
  width: 60%;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

picker {
  width: 30%;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

button {
  padding: 10rpx 20rpx;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5rpx;
}

.result-container {
  width: 100%;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  margin-top: 20rpx;
}

.result-header {
  padding: 10rpx;
  background-color: #f4f4f4;
  font-weight: bold;
}

.result-table {
  width: 100%;
}

.result-row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}

.result-cell {
  flex: 1;
  text-align: center;
}

.no-match {
  font-size: 16rpx;
  text-align: center;
}